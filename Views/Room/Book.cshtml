@model FinalAssignment.Models.RoomBookingModel

@{
    ViewData["Title"] = "Book";
}

<h1>Create Booking</h1>
<form asp-action="Book">
    <div class="form-group">
        <label asp-for="Booking.StaffID" class="control-label"></label>
        <select asp-for="Booking.StaffID" class="form-group form-select" required>
            <option disabled selected>Select a staff</option>
            @foreach (var staff in Model.Staff)
            {
                <option value=@staff.StaffID>@staff.StaffID</option>
            }
        </select>
        <span asp-validation-for="Booking.StaffID" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Booking.RoomID" class="control-label"></label>
        <select asp-for="Booking.RoomID" class="form-group form-select" required>
            <option disabled selected>Select a room</option>
            @foreach (var room in Model.Rooms)
            {
                <option value=@room.RoomID>@room.RoomID</option>
            }
        </select>
        <span asp-validation-for="Booking.RoomID" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Booking.BookingDate" class="control-label"></label>
        <input asp-for="Booking.BookingDate" class="form-control" asp-format="{0:yyyy-MM-ddTHH:mm}"/>
        <span asp-validation-for="Booking.BookingDate" class="text-danger"></span>
    </div>
    <hr />
    <div class="form-group">
        <input type="submit" value="Book" class="btn btn-primary" />
    </div>
</form>
