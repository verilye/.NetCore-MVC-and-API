@model List<Staff>

@{
    ViewData["Title"] = "Display Staff";
}
<h1 class="display-4">Display all staff members</h1>
<div class="d-flex">
    <table>
        <thead>
            <tr>
                <th>StaffID</th>
                <th>First name</th>
                <th>Last name</th>
                <th>Email</th>
                <th>Mobile Phone</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var staff in Model)
            {
                <tr>
                    <td>@staff.StaffID</td>
                    <td>@staff.FirstName</td>
                    <td>@staff.LastName</td>
                    <td>@staff.Email</td>
                    <td>@staff.MobilePhone</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    td{
        padding:15px;
        border-left: solid;
    }
</style>
